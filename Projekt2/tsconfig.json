{
  "compilerOptions": {
    "target": "ES2020",                     // Set to ES2020 for compatibility with modern JavaScript features.
    "module": "ES2020",                     // Change module to ES2020 for ES module compatibility.
    "moduleResolution": "node",              // Resolve modules in Node.js style.
    "outDir": "./dist",                      // Specify output directory for compiled JavaScript files.
    "rootDir": "./src",                     // Set the root directory for input files.
    "esModuleInterop": true,                 // Enables interoperability between CommonJS and ES Modules.
    "forceConsistentCasingInFileNames": true, // Enforces case consistency in imports.
    "skipLibCheck": true,                   // Skip type checking of declaration files.
    "strict": true,                          // Enable strict type checking options.
    "noEmitOnError": true                    // Prevent emitting files if there are type errors.
  },
  "include": ["src/**/*.ts"],                // Include all TypeScript files in the src directory.
  "exclude": ["node_modules", "**/*.spec.ts"] // Exclude node_modules and test files.
}
