{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmitOnError": true
  },
  "include": ["**/*.ts"], 
  "exclude": ["node_modules", "**/*.spec.ts"]
}
