{
  "compilerOptions": {
    "target": "ES2020",                           // Specify ECMAScript target version.
    "module": "ESNext",                           // Use ESNext for the module system.
    "moduleResolution": "node",                    // Use Node.js style module resolution.
    "outDir": "./dist",                           // Output directory for compiled files.
    "rootDir": "./src",                           // Set the root directory for input files.
    "esModuleInterop": true,                       // Enable interoperability between CommonJS and ES Modules.
    "forceConsistentCasingInFileNames": true,    // Enforce consistent casing in imports.
    "skipLibCheck": true,                         // Skip type checking of declaration files.
    "strict": true,                                // Enable all strict type-checking options.
    "noEmitOnError": true                          // Prevent emitting files if there are type errors.
  },                            // Set the root directory for input files.
  "include": ["**/*.ts"],                     // Include all TypeScript files in the src directory.
  "exclude": ["node_modules", "**/*.spec.ts"]    // Exclude node_modules and test files.
}
